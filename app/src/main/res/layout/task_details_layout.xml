<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040">


    <Button
        android:id="@+id/taskDetBackBut"
        android:layout_width="159dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="49dp"
        android:backgroundTint="#1D364A"
        android:fontFamily="@font/brawler"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/taskDetFocusBut"
        android:layout_width="194dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="49dp"
        android:backgroundTint="#1D364A"
        android:fontFamily="@font/brawler"
        android:text="@string/enter_focus_session"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/taskDetTitleTextView"
        android:layout_width="410dp"
        android:layout_height="103dp"
        android:layout_marginTop="21dp"
        android:background="#1E3848"
        android:backgroundTint="#1E3848"
        android:fontFamily="@font/brawler"
        android:gravity="center"
        android:hint="@string/project_x_details"
        android:minHeight="48dp"
        android:text="@string/project_x_details_title"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoImageView" />

    <ProgressBar
        android:id="@+id/taskDetprogressBar1"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="278dp"
        android:layout_height="42dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="83dp"
        android:pointerIcon="arrow"
        android:progress="50"
        android:progressBackgroundTint="#FF9800"
        android:progressTint="#FF9800"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskDetStatusTextView" />

    <TextView
        android:id="@+id/taskDetTimeSpentTextView"
        android:layout_width="217dp"
        android:layout_height="47dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="1dp"
        android:background="#1E3848"
        android:fontFamily="@font/brawler"
        android:gravity="center"
        android:hint="@string/time_spent_on_task"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/taskDetprogressBar2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/taskDetTimeTextView"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="1dp"
        android:background="#1E3848"
        android:fontFamily="@font/brawler"
        android:gravity="center"
        android:hint="@string/_1_5_hrs"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/taskDetprogressBar2"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/taskDetStatusTextView"
        android:layout_width="279dp"
        android:layout_height="36dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="82dp"
        android:background="#1E3848"
        android:fontFamily="@font/brawler"
        android:gravity="center"
        android:hint="@string/completion_status"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskDetDescripEditText" />

    <EditText
        android:id="@+id/taskDetDescripEditText"
        android:layout_width="279dp"
        android:layout_height="55dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="82dp"
        android:backgroundTint="#FEFEFE"
        android:hint="@string/task_detail_description"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="" />

    <ProgressBar
        android:id="@+id/taskDetprogressBar2"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="278dp"
        android:layout_height="42dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="22dp"
        android:pointerIcon="arrow"
        android:progress="22"
        android:progressBackgroundTint="#D50000"
        android:progressTint="#D50000"
        app:layout_constraintBottom_toTopOf="@+id/checkBox"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/shiftmatelogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeTextView"
        tools:ignore="HardcodedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/brawler"
        android:text="ShiftMate"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="221dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="116dp"
        android:backgroundTint="#FEFEFE"
        android:buttonTint="#FEFEFE"
        android:checked="false"
        android:fontFamily="@font/brawler"
        android:text="@string/task_completedchkbx"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>