<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MinMaxGoalAct"
    android:background="#404040">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="107dp"
            android:layout_height="104dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/shiftmatelogo" />

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="394dp"
            android:layout_height="73dp"
            android:layout_marginEnd="5dp"
            android:background="#1E3848"
            android:backgroundTint="#1E3848"
            android:fontFamily="@font/brawler"
            android:hint="Goals"
            android:inputType="text"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/goalName"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:autofillHints=""
            android:backgroundTint="#FEFEFE"
            android:fontFamily="@font/brawler"
            android:hint="Enter Goal Name"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <EditText
            android:id="@+id/minHourGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:backgroundTint="#FEFEFE"
            android:fontFamily="@font/brawler"
            android:hint="Enter Minimum Hourly Goal"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <EditText
            android:id="@+id/maxHourGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:backgroundTint="#FEFEFE"
            android:fontFamily="@font/brawler"
            android:hint="Enter Maximum Hourly Goal"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />


        <Button
            android:id="@+id/submitGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#1D364A"
            android:textColor="@color/white"
            android:text="Submit Goal" />

        <Button
            android:id="@+id/displayAllGoals"
            android:layout_width="212dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#1D364A"
            android:text="Display all goals"
            android:textColor="@color/white" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="192dp">

            <TextView
                android:id="@+id/displayGoal"
                android:layout_width="332dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

        </ScrollView>

        <Button
            android:id="@+id/Backbtn"
            android:layout_width="137dp"
            android:layout_height="51dp"
            android:backgroundTint="#1D364A"
            android:textColor="@color/white"
            android:text="Back" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>