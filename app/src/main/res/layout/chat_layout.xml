<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040">

    <Button
        android:id="@+id/chatBackBut"
        android:layout_width="159dp"
        android:layout_height="48dp"
        android:backgroundTint="#1D364A"
        android:fontFamily="@font/brawler"
        android:text="@string/back_chatLay"
        android:textColor="@color/white"
        android:textColorLink="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <EditText
        android:id="@+id/nameTextView"
        android:layout_width="410dp"
        android:layout_height="103dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:autofillHints=""
        android:background="#1E3848"
        android:backgroundTint="#1E3848"
        android:fontFamily="@font/brawler"
        android:hint="@string/Chat_Title"
        android:inputType="text"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.213" />

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/brawler"
        android:text="ShiftMate"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.081"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/shiftmatelogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <EditText
        android:id="@+id/editTextMessage"
        android:layout_width="360dp"
        android:layout_height="49dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:fontFamily="@font/brawler"
        android:hint="@string/type_message"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.822" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="59dp"
        android:layout_height="50dp"
        android:contentDescription="@string/Todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.823"
        app:srcCompat="@android:drawable/ic_menu_send" />

    <ScrollView
        android:layout_width="292dp"
        android:layout_height="279dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.559">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="292dp"
            android:layout_height="279dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.557">

            <TextView
                android:id="@+id/chatTextView1"
                android:layout_width="273dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="#E0F2F1"
                android:fontFamily="@font/brawler"
                android:paddingStart="6dp"
                android:text="@string/message_1"
                android:textColor="@color/black"
                android:textColorLink="@color/black"
                tools:ignore="RtlSymmetry,TextSizeCheck"
                tools:layout_editor_absoluteX="69dp"
                tools:layout_editor_absoluteY="240dp" />

            <TextView
                android:id="@+id/chatTextView2"
                android:layout_width="271dp"
                android:layout_height="87dp"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="#E0F2F1"
                android:fontFamily="@font/brawler"
                android:paddingStart="6dp"
                android:paddingTop="4dp"
                android:paddingBottom="3dp"
                android:text="@string/message_2"
                android:textColor="@color/black"
                android:textColorLink="@color/black"
                tools:ignore="RtlSymmetry,TextSizeCheck"
                tools:layout_editor_absoluteX="69dp"
                tools:layout_editor_absoluteY="310dp" />

            <TextView
                android:id="@+id/chatTextView3"
                android:layout_width="274dp"
                android:layout_height="53dp"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="#E0F2F1"
                android:fontFamily="@font/brawler"
                android:paddingStart="6dp"
                android:paddingTop="4dp"
                android:text="@string/message_3"
                android:textColor="@color/black"
                android:textColorLink="@color/black"
                tools:ignore="RtlSymmetry,TextSizeCheck"
                tools:layout_editor_absoluteX="69dp"
                tools:layout_editor_absoluteY="407dp" />

            <TextView
                android:id="@+id/chatTextView4"
                android:layout_width="273dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="#E0F2F1"
                android:fontFamily="@font/brawler"
                android:paddingStart="6dp"
                android:paddingTop="4dp"
                android:text="@string/message_4"
                android:textColor="@color/black"
                android:textColorLink="@color/black"
                tools:ignore="RtlSymmetry"
                tools:layout_editor_absoluteX="69dp"
                tools:layout_editor_absoluteY="460dp" />

            <TextView
                android:id="@+id/chatTextView5"
                android:layout_width="273dp"
                android:layout_height="70dp"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="#E0F2F1"
                android:fontFamily="@font/brawler"
                android:paddingStart="6dp"
                android:paddingTop="4dp"
                android:text="@string/message_5"
                android:textColor="@color/black"
                android:textColorLink="@color/black"
                tools:ignore="RtlSymmetry"
                tools:layout_editor_absoluteX="69dp"
                tools:layout_editor_absoluteY="460dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>